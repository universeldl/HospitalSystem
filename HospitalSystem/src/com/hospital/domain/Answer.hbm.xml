        <many-to-one name="question" class="com.hospital.domain.Question" column="questionId" unique="true"></many-to-one> <!-- 唯一外键关联到Question -->

		<many-to-one name="retrieveInfo" class="com.hospital.domain.RetrieveInfo"  lazy="false" >
			<column name="deliveryId"></column>
		</many-to-one>

		<many-to-one name="patient" class="com.hospital.domain.Patient"  lazy="false" >
			<column name="patientId"></column>
		</many-to-one>

		<many-to-one name="survey" class="com.hospital.domain.Survey"  lazy="false" >
			<column name="surveyId"></column>
		</many-to-one>

		<many-to-one name="doctor" class="com.hospital.domain.Doctor" lazy="false" >
			<column name="aid"></column>
		</many-to-one>

		<set name="choices"  lazy="false" inverse="true">
			<key>
				<column name="answerId" ></column>
			</key>
			<one-to-many class="com.hospital.domain.Choice"/>
		</set>

    </class>
</hibernate-mapping>